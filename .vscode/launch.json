{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Debug Example (Job Interview)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/Python/examples/job_interview.py",
            "cwd": "${workspaceFolder}/Python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/Python"
            },
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: Debug Example (Restaurant Order)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/Python/examples/restaurant_order.py",
            "cwd": "${workspaceFolder}/Python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/Python"
            },
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: Debug Example (Tech Request)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/Python/examples/tech_request.py",
            "cwd": "${workspaceFolder}/Python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/Python"
            },
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: Debug Example (Favorite Number)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/Python/examples/favorite_number.py",
            "cwd": "${workspaceFolder}/Python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/Python"
            },
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal",
            "justMyCode": false
        },

        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceFolder}/Python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/Python"
            },
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: Module",
            "type": "debugpy",
            "request": "launch",
            "module": "enter-your-module-name",
            "cwd": "${workspaceFolder}/Python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/Python"
            },
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: Attach",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ],
            "justMyCode": false
        },
        {
            "name": "Pytest: All Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-v",
                "${workspaceFolder}/Python/tests"
            ],
            "cwd": "${workspaceFolder}/Python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/Python"
            },
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Pytest: Specific Test",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-svx",
                "-k", "${input:pytestPattern}"
            ],
            "cwd": "${workspaceFolder}/Python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/Python"
            },
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: Debug Evals Dashboard (Streamlit)",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "${workspaceFolder}/Python/evals/dashboard.streamlit.py",
                "--server.port", "8503",
                "--server.headless", "true"
            ],
            "cwd": "${workspaceFolder}/Python/evals",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/Python"
            },
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Jest: Debug All Tests",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "--inspect-brk",
                "${workspaceFolder}/TypeScript/node_modules/.bin/jest",
                "--runInBand"
            ],
            "cwd": "${workspaceFolder}/TypeScript",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Jest: Debug Current Test File",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "--inspect-brk",
                "${workspaceFolder}/TypeScript/node_modules/.bin/jest",
                "--runInBand",
                "${relativeFile}"
            ],
            "cwd": "${workspaceFolder}/TypeScript",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Jest: Debug conversations.test.ts",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "--inspect-brk",
                "${workspaceFolder}/TypeScript/node_modules/.bin/jest",
                "--runInBand",
                "conversations.test.ts"
            ],
            "cwd": "${workspaceFolder}/TypeScript",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Jest: Debug Specific Test",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "--inspect-brk",
                "${workspaceFolder}/TypeScript/node_modules/.bin/jest",
                "--runInBand",
                "-t",
                "${input:testName}"
            ],
            "cwd": "${workspaceFolder}/TypeScript",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "TypeScript: Debug Current File",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "tsx",
                "--inspect"
            ],
            "args": [
                "${file}"
            ],
            "cwd": "${workspaceFolder}/TypeScript",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "envFile": "${workspaceFolder}/.env",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "TypeScript: Debug Example (Basic Usage)",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "tsx",
                "--inspect"
            ],
            "args": [
                "${workspaceFolder}/TypeScript/examples/basic-usage.ts"
            ],
            "cwd": "${workspaceFolder}/TypeScript",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "TypeScript: Debug Example (Job Interview)",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "tsx",
                "--inspect"
            ],
            "args": [
                "${workspaceFolder}/TypeScript/examples/job-interview.ts"
            ],
            "cwd": "${workspaceFolder}/TypeScript",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "TypeScript: Debug Example (Restaurant Order)",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "tsx",
                "--inspect"
            ],
            "args": [
                "${workspaceFolder}/TypeScript/examples/restaurant-order.ts"
            ],
            "cwd": "${workspaceFolder}/TypeScript",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "TypeScript: Debug minimal.ts",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "tsx",
                "--inspect"
            ],
            "args": [
                "${workspaceFolder}/TypeScript/minimal.ts"
            ],
            "cwd": "${workspaceFolder}/TypeScript",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Elixir: Phoenix Server (chatfield_phoenix)",
            "type": "mix_task",
            "request": "launch",
            "task": "phx.server",
            "projectDir": "${workspaceFolder}/TypeScript/examples/chatfield_phoenix",
            "requireFiles": [
                "test/**/test_helper.exs",
                "test/**/*_test.exs"
            ],
            "env": {}
        },
        {
            "name": "Elixir: Run Tests (chatfield_phoenix)",
            "type": "mix_task",
            "request": "launch",
            "task": "test",
            "projectDir": "${workspaceFolder}/TypeScript/examples/chatfield_phoenix",
            "requireFiles": [
                "test/**/test_helper.exs",
                "test/**/*_test.exs"
            ]
        },
        {
            "name": "Elixir: Run Current Test File",
            "type": "mix_task",
            "request": "launch",
            "task": "test",
            "taskArgs": [
                "${relativeFile}"
            ],
            "projectDir": "${workspaceFolder}/TypeScript/examples/chatfield_phoenix",
            "requireFiles": [
                "test/**/test_helper.exs",
                "test/**/*_test.exs"
            ]
        },
        {
            "name": "Elixir: Run iex -S mix",
            "type": "mix_task",
            "request": "launch",
            "task": "run",
            "taskArgs": [
                "--no-halt"
            ],
            "projectDir": "${workspaceFolder}/TypeScript/examples/chatfield_phoenix",
            "requireFiles": []
        }
    ],
    "inputs": [
        {
            "id": "testName",
            "type": "promptString",
            "description": "Enter test name pattern to debug"
        },
        {
            "id": "pytestPattern",
            "type": "promptString",
            "description": "Enter pytest pattern (e.g., test name or file::test)",
            "default": "test_"
        }
    ]
}